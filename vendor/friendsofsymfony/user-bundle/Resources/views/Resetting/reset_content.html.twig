{% extends 'base.html.twig' %}
{% block body %}
    {% include 'template/header.html.twig' %}
    <div class="wrapper">
        <div class="container-fluid scrollbar">
            <script src='https://www.google.com/recaptcha/api.js'></script>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <h2>Reset della password</h2>
                    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
                    {{ form_widget(form) }}
                    <div>
                        <input class="btn btn-success" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
                    </div>
                    {{ form_end(form) }}
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>
    {% include 'template/footer.html.twig' %}

{% endblock %}