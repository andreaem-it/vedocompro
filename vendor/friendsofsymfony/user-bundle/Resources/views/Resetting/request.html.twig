{% extends 'base.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% include 'template/header.html.twig' %}

    <div class="wrapper">
        <div class="container-fluid scrollbar">
            <script src='https://www.google.com/recaptcha/api.js'></script>
            <div class="row">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <!--<form class="form-signin" action="{{ path('reset-password') }}" method="post">-->
                    <div class="form-signin">
                        <h2 class="form-signin-heading mt-5">Ripristino Password</h2>
                        <small>Inserisci l'indirizzo e-mail con cui ti sei registrato, se corrisponde, riceverai un'e-mail con un link per reimpostare la password</small>
                        <br><br>
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                            <div class="form-group">
                                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                                <input class="form-control" type="text" id="username" name="username" required="required" />
                                <br>
                                <div class="g-recaptcha" data-sitekey="6Ldp8i4UAAAAAJLdCJR_zqUA9uUug_6P03qb6W-6"></div>
                            </div>
                            <div>
                                <input class="btn btn-success" type="submit" value="Ripristina Password" />
                            </div>
                        </form>
                        <br>

                        <br>
                    </div>
                    <!--</form>-->
                    <br><br><br><br>
                </div>
            </div>
        </div>
    </div>
{% endblock %}