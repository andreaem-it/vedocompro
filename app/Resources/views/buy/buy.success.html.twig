</div>
    <style>
        .stoppable {
            width: 100px;
            height: 100px;
        }
        .stoppable canvas, .stoppable img {
            width: 100%;
            height: 100%;
        }
    </style>
    <script>
        var c = $(".stoppable canvas")[0];
        var w = c.width;
        var h = c.height;
        var img = $(".stoppable img")[0];
        setTimeout(function () {
            c.getContext('2d').drawImage(img, 0, 0, w, h);
            $(img).hide();
            $(c).show();
        },1000);
    </script>
