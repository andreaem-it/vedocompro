{% extends 'base.html.twig' %}
{% block body %}
    {% include 'template/header.html.twig' %}
    <div class="modal fade" id="deleteMessage">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p>Eliminare Messaggio?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger">Elimina</button>
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Annulla</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid scrollbar">
        <div class="container">
            <br>
            <div class="row">
                <div class="col-sm-12">
                    <a href="{{ url('profilo', {query: app.user.username}) }}#messaggi">< Torna a Messaggi</a>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="card" style="width:100%">
                    <div class="card-block">
                        <h4 class="card-title">Messaggio da {{ user.getMessageFromUser(message.0.fromUID) }}</h4>
                        <h6 class="card-subtitle mb-2 text-muted">{{ user.convertAds(message.0.object) }}</h6>
                        <small class="card-subtitle">{{ message.0.datetime|date('d-m-Y H:i:s') }}</small>
                        <br><br>
                        <p class="card-text">{{ message.0.message }}</p>
                        - {{ user.getMessageFromUser(message.0.fromUID) }}
                        <br>
                        <hr>
                        <form action="{{ url('nuovo_message', {to: message.0.fromUID}) }}" method="post">
                            <textarea class="form-control" id="message" name="message"
                                      placeholder="Inserisci messaggio..."></textarea>
                            <br>
                            <input type="submit" class="card-link btn btn-outline-success" value="Rispondi"/>
                            <a href="#" class="card-link btn btn-outline-danger" data-toggle="modal"
                               data-target="#deleteMessage">Elimina</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'template/footer.html.twig' %}
{% endblock %}