{% extends 'base.html.twig' %}
{% block title %}{{ ad_info.0.name }} - VedoCompro.it - Acquista e Vendi con un Video!{% endblock %}
{% block head %}
    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:type" content="product" />
    <meta property="og:title" content="{{ ad_info.0.name }}" />
    <meta property="og:description" content="{{ ad_info.0.description }}" />
    <meta property="og:image" content="http://www.vedocompro.it/uploads/photos/{{ ad_info.0.id }}-1.jpg" />
    <meta property="og:video:width" content="450"> <!-- player width -->
    <meta property="og:video:height" content="250"> <!-- player height -->
    <meta property="og:video" content="https://s3.eu-west-2.amazonaws.com/vedocompro-video/{{ ad_info.0.id }}.m4v"> <!-- You will need to echo/print the video source (*.mp4) with server-side code -->
    <meta property="og:video:secure_url" content="https://s3.eu-west-2.amazonaws.com/vedocompro-video/{{ ad_info.0.id }}.m4v"> <!-- required for users whom use SSL (actually Facebook forces everyone to use SSL so you're required to use og:video:secure_url) so get a one -->
{% endblock %}
{% block body %}

    {% if app.user %}
        {% embed 'modals/ad.message.html.twig' %}
        {% endembed %}
    {% else %}
        <div class="modal fade" id="send_message">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Messaggio</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <h6>Spiacente, devi essere <a href="{{ url('registrati') }}">registrato</a> per inviare messaggi.</h6>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% embed 'modals/ad.call.html.twig' %}
{% endembed %}

<div class="modal fade " id="video-modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body modal-video">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                  {% for photo in photos %}
                      {% if loop.first %}
                          <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="active"></li>
                      {% else %}
                          <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}"></li>
                      {% endif %}
                  {% endfor %}
              </ol>
                {% for photo in photos %}
                    {% if loop.first %}
                        <div class="carousel-item active">
                            <img class="img-fluid" style="max-height:400px" src="/uploads/photos/{{ photo }}">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img class="img-fluid" style="max-height:400px" src="/uploads/photos/{{ photo }}">
                        </div>
                    {% endif %}
                {% endfor %}
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
      </div>
    </div>
  </div>
</div>
{% include 'template/header.html.twig' %}
<div class="wrapper">
    <div class="container-fluid scrollbar"">

        <div class="row">
            <div class="col-sm-12">
                <h2 style="margin:15px">{{ ad_info.0.name }}<span class="float-right">{{ ad_info.0.price }}&nbsp;€</span></h2>
                <br>
            </div>
            <div class="col-lg-4">
                <div class="card">
                  <!--<video id="preview" class="video-js vjs-default-skin vjs-big-play-button" width="100%" height="100%" controls >
                      <source src="/uploads/videos/{{ ad_info.0.id }}.mov" type="video/mov" />
                      <source src="/uploads/videos/{{ ad_info.0.id }}.mp4" type='video/mp4' />
                      <source src="/uploads/videos/{{ ad_info.0.id }}.webm" type="video/webm" />
                    </video>-->
                    <div id="video"></div>
                    <br class="hidden-md-up">
                    <div class="row no-gutters">
                        {% for photo in photos %}
                            {% if loop.length == 1 %}
                                <div class="col">
                                    <a href="" data-toggle="modal" data-target="#video-modal"><img style="max-width:120px" class="img-responsive img-thumbnail" src="/uploads/photos/{{ photo }}"/></a>
                                </div>
                            {% else %}
                                <div class="col" style="margin-top:5px;{% if loop.last %}{% else %}margin-right:5px{% endif %}">
                                    <a href="" data-toggle="modal" data-target="#video-modal"><img class="img-responsive img-thumbnail" src="/uploads/photos/{{ photo }}"/></a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                  <div class="card-block">
                    <h5 class="card-title">{{ ad_info.0.name }} </h5>
                      <!--<div class="row">
                          <div class="col-lg-12">
                              <a href="{{ url('acquista_id', {'id': ad_info.0.id }) }}" class="btn btn-block {% if is_wish != null %}btn-success{% else %}btn-outline-success{% endif %}">Lista Desideri</a>
                          </div>
                      </div>
                        <br>-->
                      <div class="row">
                          <div class="col-6">
                              <a href="" data-toggle="modal" data-target="#call" class="btn btn-block btn-outline-success">Chiama</a>
                          </div>
                          <div class="col-6">
                              <a href="" data-toggle="modal" data-target="#send_message" class="btn btn-block btn-outline-success">Messaggio</a>
                          </div>
                      </div>
                        <br>
                      <div class="sharethis-inline-share-buttons"></div>
                      <br>
                  </div>
                  <ul class="list-group list-group-flush ">
                    <li class="list-group-item">Prezzo: &nbsp;<strong>{{ ad_info.0.price }}</strong>&nbsp; €</li>
                    <li class="list-group-item">Venduto da: &nbsp;<a href="{{ path('profilo', {'query': user_info.0.name}) }}">{{user_info.0.name }}</a>&nbsp; ({{user_info.0.points}}) - {{ feed_percent }}% positivi</li>
                    <li class="list-group-item user-details-list">Categoria: {{ ads.convertCategory(ad_info.0.category|capitalize) }}</li>
                    <li class="list-group-item user-details-list">Condizione: {{ ad_info.0.objCondition }}</li>
                    <li class="list-group-item user-details-list">Località: {{ ad_info.0.location }}&nbsp; ({{ ad_info.0.region }}) </li>
                    <li class="list-group-item user-details-list">Visualizzato {{ ad_info.0.views }} volte</li>
                  </ul>
                </div>

            </div>
            <br><br>
            <div class="col-lg-6">
                <br class="hidden-md-up">
                <ul class="nav nav-pills nav-justified">
                  <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#annunci" role="tab">Dettagli</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#feedback" role="tab">Spedizione</a>
                  </li>
                </ul><br>
                <div class="tab-content">
                    <div class="tab-pane active" id="annunci" role="tabpanel">
                        <div class="card" style="width: 100%;">
                            <div class="card-block">
                                <div class="card-text">
                                    <h4  style="margin:15px 0px">Descrizione</h4>
                                    <hr>
                                    <div>{{ ad_info.0.description }}</div>
                                    <br>
                                    {% if ad_info.0.category == 1 %}
                                    <h4>Dettagli:</h4>
                                    <div class="col-lg-6">
                                      <ul class="list-group">
                                        <li class="list-group-item">Chilometraggio: <span class="float-right">{{ ad_info.0.option1 }}</span></li>
                                        <li class="list-group-item">Anno: {{ ad_info.0.option2 }}</li>
                                        <li class="list-group-item">Proprietari: {{ ad_info.0.option3 }}</li>
                                        <li class="list-group-item">Targa: {{ ad_info.0.option4 }}</li>
                                      </ul>
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="feedback" role="tabpanel">
                        <div class="card" style="width: 100%;">
                            <div class="card-block">
                                <div class="card-text">
                                    <br><div class="text-center">Nessuna spedizione</div><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="card">
                        <div class="card-block">
                            <div class="card-text">
                                <h4>Inserzioni simili</h4>
                                <hr>
                                {% for similars in similar %}
                                {% if  loop.index % 4 == 1 or loop.first %}

                                <br>
                                <div class="row">
                                    {% endif %}
                                    <div class="col-md-3" >
                                        {% if similars.objLevel == 1 %}
                                        <div class="card result-card" style="border: 4px solid rgb(218, 165, 32);">
                                            {% elseif similars.objLevel == 2 %}
                                            <div class="card result-card" style="border: 4px solid #ccc;">
                                                {% elseif similars.objLevel == 3 %}
                                                <div class="card result-card" style="border: 4px solid #CD7F32">
                                                    {% else %}
                                                    <div class="card result-card">
                                                        {% endif %}
                                                        {% set category = (ads.slugify(ads.convertCategory(similars.category))) %}
                                                        <a href="{{ url('vedi_oggetto', {'category': category, 'item': similars.id, 'title': ads.slugify(similars.name) }) }}"><img class="card-img-top img-fluid" src="/uploads/photos/{{ similars.id }}-1.jpg"></a>
                                                        <div class="card-block">
                                                            <h6 class="card-title" style="font-size:14px"><a href="">{{ similars.name }}</a></h6>
                                                            <p class="card-text"><strong>{{ similars.price }}&nbsp;€</strong></p>
                                                        </div>
                                                    </div>
                                                </div>
                                                {% if  loop.index % 4 == 0 or loop.last %}
                                            </div>
                                        {% elseif loop.last %}
                                            <p></p>
                                        {% endif %}
                                    {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 text-center hidden-md-down" style="margin-left: -20px;">
                <!--<img src="http://dianescorner.com/images/ad_placeholder.gif">-->
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- VedoCompro -->
                <ins class="adsbygoogle"
                     style="display:inline-block;width:160px;height:600px"
                     data-ad-client="ca-pub-4967985757423249"
                     data-ad-slot="7771954836"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    </div>
    {% include 'template/footer.html.twig' %}
</div>
