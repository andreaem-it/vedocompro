{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Dashboard{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->

        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>Statistiche</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content container-fluid">
            <div class="row">
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>{{ activeUsersCount }}<sup style="font-size: 20px"></sup></h3>

                            <p>Utenti Attivi</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person"></i>
                        </div>
                        <a href="{{ url('admin_utenti') }}" class="small-box-footer">
                            Vedi tutti <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-green">
                        <div class="inner">
                            <h3>{{ adsCount }}<sup style="font-size: 20px"></sup></h3>

                            <p>Inserzioni Attive</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="{{ url('admin_inserzioni') }}" class="small-box-footer">
                            Vedi tutti <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-2 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3>{{ videosToModerateCount }}<sup style="font-size: 20px"></sup></h3>

                            <p>Video da moderare</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-alert"></i>
                        </div>
                        <a href="{{ url('admin_video') }}" class="small-box-footer">
                            Vedi tutti <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-2 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-yellow">
                        <div class="inner">
                            <h3>{{ reviewsToModerateCount }}<sup style="font-size: 20px"></sup></h3>

                            <p>Recensioni da moderare</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-chatboxes"></i>
                        </div>
                        <a href="{{ url('admin_reviews') }}" class="small-box-footer">
                            Vedi tutti <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-2 col-xs-6">
                    <!-- small box -->
                    <div class="small-box bg-red">
                        <div class="inner">
                            <h3>{{ ticketsOpenCount }}<sup style="font-size: 20px"></sup></h3>

                            <p>Richieste Assistenza</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-help"></i>
                        </div>
                        <a href="{{ url('admin_helpdesk') }}" class="small-box-footer">
                            Vedi tutti <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-header">
                            <h4 class="box-title">Attivit√†</h4>
                            <div class="box-tools pull-right">
                                <ul class="pagination pagination-sm inline">
                                    {% for i in range(1, adminActionsPages) %}
                                        <li><a href="{{ url('admin_act', {'page': i}) }}">{{ i }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="box-body table-responsive ">
                            <table class="table table-hover">
                                <tbody>
                                    <tr>
                                        <th>Data</th>
                                        <th>Operatore</th>
                                        <th>Tipo</th>
                                        <th>Descrizione</th>
                                    </tr>
                                    {% for adminAction in adminActions %}
                                        <tr>
                                            <td>{{ adminAction.linedate|date("d-m-Y H:i:s") }}</td>
                                            <td>{{ tools.convertUser(adminAction.uid) }}</td>
                                            <td>{{ tools.convertAccessType(adminAction.type,1) }}</td>
                                            <td>{{ tools.convertAccessType(adminAction.type,2) }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- /.content -->
    <!-- /.content-wrapper -->
{% endblock %}