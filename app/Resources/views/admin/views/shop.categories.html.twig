{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Shop{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Shop
            <small>Categorie</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Categorie Shop</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="box">
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Categoria Padre</th>
                            </tr>
                            {% for cat in categories %}
                                <tr>
                                    <td>{{ cat.id }}</td>
                                    <td><a href="{{ url('admin_vedi_inserzioni',{'id':cat.id} ) }}">{{ cat.name }}</a></td>
                                    <td><a href="{{ url('admin_utenti_vedi' , {'id': cat.id}) }}">{{ (cat.father) }}</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                {{ form_start(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <style>
        .bg-gold {
            background-color: #CFB53B;
        }
        .bg-silver {
            background-color: #C0C0C0;
        }
        .bg-bronze {
            background-color: #cd7f32;
        }
    </style>
{% endblock %}