{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Mail{% endblock %}

{% block body %}
    {{ tinymce_init() }}
    <section class="content-header">
        <h1>
            Mail
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li>Mail</li>
        </ol>
    </section>
    <section class="content container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {% if success == 1 %}
                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success" role="alert">
                            {{ flashMessage }}
                            <br>
                        </div>
                    {% endfor %}
                {% endif %}
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="form_to" class="col-sm-2 control-label">Tipo:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.type) }}
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="form_default" class="col-sm-3 control-label">Messaggio predefinito:</label>
                            <div class="col-sm-9">
                                {{ form_widget(form.default) }}
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="form_to" class="col-sm-2 control-label">Destinatario:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.to) }}
                                <br>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="form_from" class="col-sm-2 control-label">Mittente:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.from) }}
                                <br>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="form_subject" class="col-sm-2 control-label">Oggetto:</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.subject) }}
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="form_message" class="col-sm-1 control-label">Messaggio:</label>
                            <div class="col-sm-11">
                                {{ form_widget(form.message) }}
                                <br>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_widget(form.submit) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </section>
    <style>
    </style>
{% endblock %}