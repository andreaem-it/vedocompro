{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Mail{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            Mail
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li>Mail</li>
        </ol>
    </section>
    <section class="content container-fluid">
        <div class="row">

            <div class="col-lg-12">
                {% if success == 1 %}
                    <div class="alert alert-success" role="alert">
                        Messaggio inviato!
                        <br>
                    </div>
                {% endif %}
                {{ form_start(form) }}
                    <div class="form-group">
                        <label for="form_to" class="col-sm-1 control-label">Destinatario:</label>
                        <div class="col-sm-11">
                            {{ form_widget(form.to)}}
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_from" class="col-sm-1 control-label">Mittente:</label>
                        <div class="col-sm-11">
                            {{ form_widget(form.from) }}
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_subject" class="col-sm-1 control-label">Oggetto:</label>
                        <div class="col-sm-11">
                            {{ form_widget(form.subject) }}
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form_subject" class="col-sm-1 control-label">Messaggio:</label>
                        <div class="col-sm-11">
                            {{ form_widget(form.message) }}
                            <br>
                        </div>
                    </div>
                    {{ form_widget(form.submit) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
    <style>
    </style>
{% endblock %}