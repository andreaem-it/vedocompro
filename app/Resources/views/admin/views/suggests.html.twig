{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Suggerimenti{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            Suggerimenti
            <small>Vedi</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li><a href="">Suggerimenti</a></li>
            <li>Vedi</li>
        </ol>
    </section>
    <br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody><tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Tipo</th>
                                <th>Messaggio</th>
                                <th>Data</th>
                            </tr>
                            {% for suggest in suggests %}
                                <tr>
                                    <td>{{ suggest.id }}</td>
                                    <td>{{ suggest.name }}</td>
                                    <td>{{ suggest.mail }}</td>
                                    <td>{{ suggest.type }}</td>
                                    <td>{{ suggest.message }}</td>

                                </tr>
                            {% endfor %}
                            </tbody></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}