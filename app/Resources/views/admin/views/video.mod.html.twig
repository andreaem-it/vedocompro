{% extends 'admin/base.html.twig' %}

{% block title %}VedoCompro.it - ADMIN - Video{% endblock %}

{% block body %}

    <section class="content-header">
        <h1>
            Video
            <small>Moderazione</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active"><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
            <li>Video</li>
        </ol>
    </section>

    <div class="content container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover">
                            <tbody>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Utente</th>
                                <th>Categoria</th>
                                <th>Data</th>
                                <th>Stato</th>
                            </tr>
                            {% for key,video in videos %}
                                {% if functions.checkExt(video) == 1 %}
                                <tr>
                                    <td>{{ key }}</td>
                                    <td>{{ functions.getBasename(video)  }}</td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}